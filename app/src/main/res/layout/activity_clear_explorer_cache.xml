<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_cache_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/progressBarClearCache"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvClearCacheStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_cache_starting"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnCloseClearCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_cache_close"
        android:enabled="false" />

</LinearLayout>