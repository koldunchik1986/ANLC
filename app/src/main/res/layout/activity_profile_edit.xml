<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки профиля:"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ник"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextPasswordFlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль для флеш-запросов (если отличается)"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextConfigPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Пароль для шифрования конфигурации"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkBoxAutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автоматический вход" />

        <CheckBox
            android:id="@+id/checkBoxUseProxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Использовать прокси" />

        <CheckBox
            android:id="@+id/checkBoxAutoClearCookies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Автоматически очищать куки" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonSaveProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранить" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отмена" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>