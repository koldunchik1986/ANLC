<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Верхняя панель с кнопками "Назад" и "Добавить профиль" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Назад"
            android:background="@android:color/transparent" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/btn_add_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="Добавить профиль"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Список профилей -->
    <ListView
        android:id="@+id/list_profiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice" />

    <!-- Кнопка входа -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вход в игру" />

    <!-- Нижняя панель с кнопками управления профилями -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btn_send_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Отправить профиль"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/btn_view_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Просмотреть профиль"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Изменить профиль"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/btn_delete_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Удалить профиль"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
